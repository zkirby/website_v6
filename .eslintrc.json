{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "arrow-body-style": ["error", "never"],
    "prettier/prettier": ["error"],
    // This has been recommend by Dan himself, not sure why this
    // comes as a rule...
    "react/state-in-constructor": ["error", "never"],
    // Ain't no body got time to write prop types
    // for a personal side project.
    "react/prop-types": 0
  },
  "parser": "babel-eslint"
}
